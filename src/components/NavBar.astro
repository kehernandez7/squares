---
import "../styles/global.css";
---

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #0d1b2a; /* match dark background */
    border-bottom: 1px solid #1b263b;
    padding: 0.75rem 1.5rem;
    display: flex;
    justify-content: space-between; /* left and right spacing */
    align-items: center;
    z-index: 1000;
    color: #e0e0e0;
  }

  .site-name a {
    color: #f0f0f0;
    font-weight: 700;
    text-decoration: none;
  }

  .profile-area a {
    display: inline-flex; /* shrink to content */
    align-items: center; /* vertical centering */
    justify-content: center;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #4e8cff, #2563eb);
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    color: white;
    white-space: nowrap; /* don’t wrap text */
    max-width: max-content; /* ensure it never overflows */
    box-sizing: border-box; /* padding doesn’t add extra width */
  }

  .profile-area a:hover {
    background: linear-gradient(135deg, #2563eb, #1d4ed8);
    transform: translateY(-2px);
  }
  .profile-area {
    margin-right: 2rem;
  }
</style>

<nav>
  <!-- Left -->
  <div class="site-name">
    <a href="/" class="text-xl font-bold text-gray-800">Fantasy Dart</a>
  </div>

  <!-- Center -->
  <!-- <div class="center-nav">
    <a href="/" class="nav-link">Home</a>
  </div> -->

  <!-- Right -->
  <div class="profile-area">
    <a href="/login">Sign In</a>
  </div>
</nav>
